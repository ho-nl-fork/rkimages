<?xml version="1.0" encoding="UTF-8"?>
<config>
	<modules>
		<Redkiwi_Rkimages>
			<version>1.1.0</version>
		</Redkiwi_Rkimages>
	</modules>
   
	<global>
		<models>
			<rkimages>
				<class>Redkiwi_Rkimages_Model</class>
			</rkimages>
		</models>
		<helpers>
			<rkimages>
				<class>Redkiwi_Rkimages_Helper</class>
			</rkimages>
		</helpers>
	</global>

	<admin>
		<routers>
			<adminhtml>
				<args>
					<modules>
						<Redkiwi_Rkimages after="Mage_Adminhtml">Redkiwi_Rkimages_Adminhtml</Redkiwi_Rkimages>
					</modules>
				</args>
			</adminhtml>
		</routers>
	</admin>

	<adminhtml>
		<layout>
			<updates>
				<rkimages>
					<file>rkimages.xml</file>
				</rkimages>
			</updates>
		</layout>
	</adminhtml>
</config>
